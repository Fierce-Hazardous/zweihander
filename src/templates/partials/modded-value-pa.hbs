{{#zhIsValueModified value baseValue}}
  <span class='modded-value'>
    <div class='modded-value-indicator {{#zhIsModifierPositive value baseValue}}{{else}}negative{{/zhIsModifierPositive}}'>
      <i class='fa-solid {{#zhIsModifierPositive value baseValue}}fa-up{{else}}fa-down{{/zhIsModifierPositive}}'></i>
      <ol class='modded-value-tooltip'>
        <li><span class='modded-value-label'>{{localize 'ZWEI.othermenues.basevalue'}}:</span> {{baseValue}}</li>
        {{#each mods}}
          <li><span class='modded-value-label'>{{source}}:</span> {{type}} {{argument}}</li>
        {{/each}}
        <li><span class='modded-value-label'>{{localize 'ZWEI.othermenues.effectivevalue'}}:</span> {{value}}</li>
      </ol>
    </div>
  </span>
{{else}}
{{/zhIsValueModified}}