<section class="item-card">
    <h2 class="item-card-title">{{name}}</h2>
    <div class="item-card-description">
      {{{zhProcessRuleText system.flavor.description}}}
    </div>
    <dl class="compact-details zh-collapsed zh-expandable" data-expand-title="{{localize "ZWEI.chatskill.itemdetails"}}">
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Associated Skill")}}</dt>
      <dd>{{localize (zhConcat "ZWEI.actor.skills." system.associatedSkill)}}</dd>
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Load")}}</dt>
      <dd>{{system.load}}</dd>
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Handling")}}</dt>
      <dd>{{system.handling}}</dd>
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Distance")}}</dt>
      <dd>{{system.distance}}</dd>
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Type")}}</dt>
      <dd>{{system.weaponType}}</dd>
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Encumbrance")}}</dt>
      <dd>{{system.encumbrance}}</dd>
      <dt>{{localize (zhConcat "ZWEI.actor.items." "Price")}}</dt>
      <dd>
        {{zhPrice system.price}}
      </dd>
    </dl>
    <dl class="item-card-qualities zh-expandable zh-collapsed" data-expand-title="{{localize "ZWEI.chatskill.showqualities"}}">
      {{#each system.qualities}}
      <dt>{{name}}</dt>
      <dd>{{effect}}</dd>
      {{/each}}
    </dl>
  </section>