  <label>{{localize "ZWEI.actor.items.qualities"}}</label>
  <input name="system.qualities.value" type="text" value="{{system.qualities.value}}">
</div>
<div class="form-group">
  <label>{{localize "ZWEI.actor.items.type"}}</label>
  <input  name="system.weaponType" type="text" value="{{system.weaponType}}">
</div>
<div class="form-group">
  <label>{{localize "ZWEI.actor.items.damageformula"}}</label>
  <input  name="system.damage.formula" type="text" value="{{system.damage.formula}}">
</div>
<div class="form-group">
  <label>{{localize "ZWEI.actor.items.encumbrance"}}</label>
  <input  name="system.encumbrance" type="number" value="{{system.encumbrance}}">
</div>
