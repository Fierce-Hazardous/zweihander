<div class="form-group">
  <label>{{localize "ZWEI.actor.items.associatedskill"}}</label>
  <select name="system.associatedSkill">
    {{!-- In case the system.associatedSkill is not in the skill list --}}
    <option value="{{system.associatedSkill}}">{{system.associatedSkill}}</option>
    {{#select system.associatedSkill}}
    {{#each skills as | skill idx | }}
      <option value="{{skill}}">{{skill}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>
<div class="form-group">
  <label>{{localize "ZWEI.actor.items.load"}}</label>
  <input  name="system.load" type="number" value="{{system.load}}">
</div>
<div class="form-group">
  <label>{{localize "ZWEI.actor.items.handling"}}</label>
  <input  name="system.handling" type="text" value="{{system.handling}}">
</div>
