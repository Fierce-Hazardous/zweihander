<div class="form-group">
  <label>Category</label>
  <input name="{{zhLocalizePath 'data.details.category'}}" type="text" value="{{zhLocalize data.details.category}}">
</div>

<div class="form-group stacked">
  <label><a class="open-editor">Effect <i class="fa fa-edit"></i></a></label>
  <div class="zh-editor-preview open">{{{zhProcessRuleText (zhLocalize data.rules.effect)}}}</div>
  {{editor content=(zhLocalize data.rules.effect) target=(zhLocalizePath "data.rules.effect") button=true owner=owner editable=editable}}
</div>

<div class="form-group stacked">
  <label>Status</label>
  <label class="checkbox">
    <input name="data.active" type="checkbox" class="link-checkbox" {{checked data.active}} />
    Currently in Effect
  </label>
</div>