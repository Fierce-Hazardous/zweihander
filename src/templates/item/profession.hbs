{{{arrayInputGroup (localize (zhConcat "ZWEI.actor.items." "Skill Ranks")) 'system.skillRanks' system.skillRanks 10 'name'}}}
{{{arrayInputGroup (localize (zhConcat "ZWEI.actor.items." "Talents")) 'system.talents' system.talents 3 'name'}}}

