<div class="form-group">
  <label>Professional Trait</label>
  <input name="data.professionalTrait.name" type="text" value="{{data.professionalTrait.name}}">
</div>

<div class="form-group">
  <label>Special Trait</label>
  <input name="data.specialTrait.name" type="text" value="{{data.specialTrait.name}}">
</div>

<div class="form-group">
  <label>Drawback</label>
