<div class="form-group">
  <label>Archetype</label>
  <select name="data.archetype">
    {{#each choices.archetypes}}
    <option value="{{value}}" {{selected}}>{{label}}</option>
    {{/each}}
  </select>
</div>

{{{arrayInputGroup 'Bonus Advances' 'data.bonusAdvances' data.bonusAdvances 7 'name'}}}
{{{arrayInputGroup 'Skill Ranks' 'data.skillRanks' data.skillRanks 10 'name'}}}
