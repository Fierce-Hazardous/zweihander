<div class="form-group">
  <label>{{localize (zhConcat "ZWEI.actor.items." "Archetype")}}</label>
  <select name="system.archetype">
    {{#each choices.archetypes}}
    <option value="{{value}}" {{selected}}>{{localize (zhConcat "ZWEI.actor.details.labels." label)}}</option>
    {{/each}}
  </select>
</div>

