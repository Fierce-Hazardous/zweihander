<form autocomplete="off">
  <section class="form-body">
    <h3>{{localize "ZWEI.settings.ftsettings.behavior"}}</h3>
    <div class="form-group">
      <label>{{localize "ZWEI.settings.ftsettings.removemisfortune"}}</label>
      <input type="checkbox" name="removeUsedMisfortune" {{#if removeUsedMisfortune}}checked{{/if}} />
      <p class="notes">{{localize "ZWEI.settings.ftsettings.removemisfortunehint"}}
      </p>
    </div>
    <div class="form-group">
      <label>{{localize "ZWEI.settings.ftsettings.alertpoint"}}</label>
      <select name="notifications">
        {{#each choices.notifications}}
        <option value="{{value}}" {{selected}}>{{localize (zhConcat "ZWEI.settings.ftsettings." label)}}</option>
        {{/each}}
      </select>
    </div>
    <h3>{{localize "ZWEI.settings.ftsettings.appearance"}}</h3>
    <div class="form-group">
      <label>{{localize "ZWEI.settings.ftsettings.trackersize"}}</label>
      <select name="size">
        {{#each choices.size}}
        <option value="{{value}}" {{selected}}>{{localize (zhConcat "ZWEI.settings.ftsettings." label)}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label>{{localize "ZWEI.settings.ftsettings.fortuneimage"}}</label>
      <div class="flexrow">
        <input type="text" name="fortunePath" value="{{fortunePath}}" />
        {{filePicker target="fortunePath" type="image"}}
      </div>
    </div>
    <div class="form-group">
      <label> Token Image{{localize "ZWEI.settings.ftsettings.misfortuneimage"}}</label>
      <div class="flexrow">
        <input type="text" name="misfortunePath" value="{{misfortunePath}}" />
        {{filePicker target="misfortunePath" type="image"}}
      </div>
    </div>
  </section>
</form>