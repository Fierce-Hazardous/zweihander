<div class="skills-list save-scroll">
  {{#each skills as | skill | }}
  <div class="skill skill-roll flexrow" data-item-id="{{skill._id}}"
    data-associated-pa="{{skill.data.associatedPrimaryAttribute.value}}"
    data-rank="{{skill.data.rank}}" data-label="{{skill.name}}">
    <span class="skill-name">
      <span>
        {{skill.name}}
      ({{getFirstLetter skill.data.associatedPrimaryAttribute.value}})
      {{#if skill.data.requiresTraining}}*{{/if}}
      </span>
    </span>
    <span class="skill-info flexrow">
      <span class="skill-rank" title="{{skill.data.rank}}">
        {{skillRankAbbreviation skill.data.rank}}
      </span>
      <span class="skill-gain">
        {{skillBonus skill.data.bonus}}
      </span>
    </span>
    {{> ($$ 'partials/focuses-list') skill.data}}
  </div>
  {{/each}}
</div>