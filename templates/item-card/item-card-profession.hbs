<section class="item-card">
  <h2 class="item-card-title">{{capitalize type}}: {{name}}</h2>
  {{#if data.flavor.description}}
  <div class="item-card-description">
    {{{processRuleText data.flavor.description}}}
  </div>
  <br/>
  {{/if}}
  <dl class="zh-expandable" data-expand-title="Show Item Details">
      <dt>Archetype</dt>
      <dd>{{data.archetype}}</dd>
      <dt>Professional Trait</dt>
      <dd>{{data.professionalTrait.name}}</dd>
      {{#if data.specialTrait.name}}
      <dt>Special Trait</dt>
      <dd>{{data.specialTrait.name}}</dd>
      {{/if}}
      {{#if data.drawback.name}}
      <dt>Drawback</dt>
      <dd>{{data.drawback.name}}</dd>
      {{/if}}
      {{#if data.expert.name}}
      <dt>Expert Profession Requirements</dt>
      <dd>{{data.expert.requirements}}</dd>
      {{/if}}
      <dt>Skill Ranks</dt>
      <dd>{{#each data.skillRanks}}{{name}}{{#unless @last}}, {{/unless}}{{/each}}</dd>
      <dt>Bonus Advances</dt>
      <dd>{{#each data.bonusAdvances}}{{name}}{{#unless @last}}, {{/unless}}{{/each}}</dd>
      <dt>Talents</dt>
      <dd>{{#each data.talents}}{{name}}{{#unless @last}}, {{/unless}}{{/each}}</dd>
    </dl>
</section>