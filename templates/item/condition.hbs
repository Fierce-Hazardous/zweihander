<div class="form-group">
  <label>Category</label>
  <input  name="data.category.value" type="text" value="{{data.category.value}}">
</div>

<div class="form-group stacked">
  <label><a class="open-editor">Effect <i class="fa fa-edit"></i></a></label>
  <div class="zh-editor-preview open">{{{processRuleText (zhlocalize data.rules.effect)}}}</div>
  {{editor content=(zhlocalize data.rules.effect) target="data.rules.effect.@en" button=true owner=owner editable=editable}}
</div>

<div class="form-group stacked">
  <label>Status</label>
  <label class="checkbox">
    <input name="data.active" type="checkbox" class="link-checkbox" {{checked data.active}} />
    Currently in Effect
  </label>
</div>