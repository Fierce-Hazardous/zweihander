<div class="form-group">
  <label>Associated Skill</label>
  <select name="data.associatedSkill.value">
    {{#select data.associatedSkill.value}}
    {{#each skills as | skill idx | }}
      <option value="{{skill}}">{{skill}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>
<div class="form-group">
  <label>Load</label>
  <input  name="data.load.value" type="number" value="{{data.load.value}}">
</div>
<div class="form-group">
  <label>Handling</label>
  <input  name="data.handling" type="text" value="{{data.handling}}">
</div>
<div class="form-group">
  <label>Distance</label>
  <input  name="data.distance.value" type="text" value="{{data.distance.value}}">
</div>
<div class="form-group">
  <label>Qualities</label>
  <input name="data.qualities.value" type="text" value="{{data.qualities.value}}">
</div>
<div class="form-group">
  <label>Type</label>
  <input  name="data.weaponType" type="text" value="{{data.weaponType}}">
</div>
<div class="form-group">
  <label>Damage Formula</label>
  <input  name="data.damage.formula" type="text" value="{{data.damage.formula}}">
</div>
<div class="form-group">
  <label>Encumbrance</label>
  <input  name="data.encumbrance.value" type="number" value="{{data.encumbrance.value}}">
</div>
