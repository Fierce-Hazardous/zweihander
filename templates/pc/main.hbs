<form class="editable flexcol" autocomplete="off">
    {{> ($$ "pc/header") }}
    <nav class="sheet-navigation tabs" data-group="primary" data-intro="This is a quick tutorial">
        <a class="item" data-tab="main">Attributes</a>
        <a class="item" data-tab="tiers">Tiers</a>
        <a class="item" data-tab="trappings">Trappings</a>
        {{#if actorConfig.isMagickUser}}
          <a class="item" data-tab="magick">Magick</a>
        {{/if}}
        <a class="item" data-tab="afflictions">Afflictions</a>
        <a class="item" data-tab="details">Background</a>
    </nav>
    <section class="sheet-body">
      {{> ($$ "pc/tab-main") }}
      {{#each tabs}}
      <div class="tab {{@key}} flexcol" data-group="primary" data-tab="{{@key}}">
        {{#if headerTemplate}}{{> ($$ headerTemplate) ../.}}{{/if}}
        {{> ($$ "partials/items-list") itemGroups}}
        {{#if footerTemplate}}{{> ($$ footerTemplate) ../.}}{{/if}}
      </div>
      {{/each}}
      {{> ($$ "pc/tab-background") }}
    </section>
</form>