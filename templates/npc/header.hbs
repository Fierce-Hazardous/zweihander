<header class="actor-sheet-header">
  <div class="npc-image-container">
        <img class="profile-image" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>
  </div>
  <section class="header-details flexcol">
        <h1 class="charname">
      <input name="name" type="text" value="{{actor.name}}" placeholder="Character Name">
    </h1>
    <ul class="summary flexrow">
      <li class="ancestry">
        <div class="ancestry-wrapper">
          <input class="input-text" name="data.physical.ancestry.value" type="text" value="{{ancestry.0.name}}"
            placeholder="Ancestry" readonly />
          <div class="ancestry-edit">
            {{#if ancestry.length}}
            <a class="ancestry-edit-button" title="Edit Ancestry"><i class="fas fa-pencil-alt fa-sm"></i></a>
            <a class="ancestry-delete-button" title="Delete Ancestry"><i class="fas fa-trash-alt fa-sm"></i></a>
            {{else}}
            <a class="add-new" data-item-type="ancestry" title="Add Ancestry"><i class="fas fa-plus fa-xs"></i></a>
            {{/if}}
          </div>
      </li>
      <li class="summary-sex">
        <input name="data.physical.age.value" type="text" value="{{data.physical.age.value}}" placeholder="Age Group" />
      </li>
      <li class="summary-sex">
        <input name="data.physical.sex.value" type="text" value="{{data.physical.sex.value}}" placeholder="Sex" />
      </li>

      <li class="summary-social">
        <input name="data.socialClass.value" type="text" value="{{data.socialClass.value}}"
          placeholder="Social Class" />
      </li>

      <li class="summary-buildtype">
        <input name="data.physical.buildType.value" type="text" value="{{data.physical.buildType.value}}"
          placeholder="Build Type" />
      </li>
      <li class="summary-hair flexrow summary-multi">
        <input name="data.physical.hairColor.value" type="text" value="{{data.physical.hairColor.value}}"
          placeholder="medium brown" />
        <label>hair</label>
      </li>
      <li class="summary-eye flexrow summary-multi">
        <input name="data.physical.eyeColor.value" type="text" value="{{data.physical.eyeColor.value}}"
          placeholder="medium brown" />
        <label>eyes</label>
      </li>
      <li class="summary-complexion flexrow summary-multi">
        <input name="data.physical.complexion.value" type="text" value="{{data.physical.complexion.value}}"
          placeholder="light brown" />
        <label>skin</label>
      </li>
    </ul>
  </section>
</header>