<section class="content">
  <div class="image-and-title">
    <img class="chat-profile-image" src="{{image}}" />
    <div class="title parry link-details">
      <span>Parry</span>
      <span class="subtitle">{{skill}} â™¦ {{difficultyRating.label}}</span>
    </div>
  </div>
  <div class="roll-details">
    <div class="row even bottom-separator">
      <strong>Flip:</strong><span> {{generateFlipText flip}}</span>
    </div>

    <div class="row odd">
      <strong>Base Chance:</strong><span> {{baseChance}}% ({{attributeChance}}[{{primaryAttribute}}]{{#if rankBonus}} + {{rankBonus}}[Skill Ranks]{{/if}}{{#if perilPenalty}} - {{perilPenalty}}[Peril]{{/if}})</span>
    </div>

    <div class="row even">
      <strong>Total Chance:</strong><span> {{totalChance}}%</span>
    </div>
  </div>

  <div class="roll-results">
    <span>{{generateResultText testResult roll totalChance showFlip}}</span>
  </div>
</section>